{
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "flake8.args": [
    "--config=${workspaceFolder}/setup.cfg"
  ],
  "python.envFile": "${workspaceFolder}/.env",
  "python.poetryPath": "${env:HOME}/.poetry/bin/poetry",
  "python.testing.pytestArgs": [
    "tests",
    "--no-cov"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "esbonio.sphinx.buildDir": "${workspaceFolder}/docs/build",
  "esbonio.sphinx.confDir": "${workspaceFolder}/docs",
  "esbonio.sphinx.srcDir": "${workspaceFolder}/docs",
  "restructuredtext.linter.doc8.executablePath": "${workspaceFolder}/.venv/bin/doc8",
  "restructuredtext.linter.doc8.extraArgs": [
    "--config",
    "${workspaceFolder}/pyproject.toml"
  ]
}
